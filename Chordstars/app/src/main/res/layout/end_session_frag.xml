<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1919"
    android:gravity="center" >

    <ImageView
        android:id="@+id/taylorSwift"
        android:layout_width="wrap_content"
        android:layout_height="340sp"
        android:layout_centerInParent="true"
        android:src="@drawable/taylorswift" />

    <TextView
        android:id="@+id/youSelected"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:text="NOW PLAYING:"
        android:textColor="#E9A172"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/stateOfGrace"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:text="&quot;State of Grace&quot; by Taylor Swift"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/silhouettePlaying"
        android:layout_width="133px"
        android:layout_height="144px"
        android:layout_centerInParent="true"
        android:layout_marginBottom="3dp"
        android:src="@drawable/silhouetteplaying" />

    <Button
        android:id="@+id/endSessionBtn"
        android:onClick="endSession"

        android:text="END SESSION"
        android:textColor="#ED4B94"
        android:textSize="20sp"

        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/iconend"
        android:drawablePadding="-20dp"
        android:layout_marginTop="5dp"

        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="15dp"

        />

</LinearLayout>