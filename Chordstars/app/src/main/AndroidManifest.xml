<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guitarheroes.com.chordstar" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconstar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="guitarheroes.com.chordstar.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main activity -->
        <activity
            android:name="guitarheroes.com.chordstar.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="guitarheroes.com.chordstar.TunerFrag"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
